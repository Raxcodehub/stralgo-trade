# Stralgo-Trade Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# ===========================
# Zerodha Configuration
# ===========================
# Get your API credentials from: https://kite.trade/
ZERODHA_API_KEY=your_zerodha_api_key_here
ZERODHA_API_SECRET=your_zerodha_api_secret_here
ZERODHA_ACCESS_TOKEN=your_zerodha_access_token_here

# ===========================
# Upstox Configuration
# ===========================
# Get your API credentials from: https://upstox.com/developer/
UPSTOX_API_KEY=your_upstox_api_key_here
UPSTOX_API_SECRET=your_upstox_api_secret_here
UPSTOX_ACCESS_TOKEN=your_upstox_access_token_here

# ===========================
# Database Configuration
# ===========================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stralgo_trade
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ===========================
# Redis Configuration
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================
# Application Configuration
# ===========================
SERVER_PORT=8080
LOG_LEVEL=INFO
SPRING_PROFILES_ACTIVE=dev

# ===========================
# Risk Management Limits
# ===========================
MAX_DAILY_LOSS=10000
MAX_POSITION_SIZE=100000
MAX_DRAWDOWN_PERCENT=5.0

# ===========================
# Notification Services (Optional)
# ===========================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# SMS (Twilio - Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================
# Monitoring (Optional)
# ===========================
# Prometheus
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_ADMIN_PASSWORD=admin

# ===========================
# Security
# ===========================
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRATION=86400

# ===========================
# Feature Flags
# ===========================
ENABLE_ZERODHA=true
ENABLE_UPSTOX=false
ENABLE_LIVE_TRADING=false
ENABLE_PAPER_TRADING=true

# ===========================
# Performance Tuning
# ===========================
DISRUPTOR_RING_BUFFER_SIZE=8192
THREAD_POOL_SIZE=10
MAX_CONNECTIONS=100

# ===========================
# Development Only
# ===========================
# Set to true to use sandbox/mock broker APIs
USE_SANDBOX=true
DEBUG_MODE=false
